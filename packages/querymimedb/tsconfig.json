{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },
  "include": ["src/**/*", "src/*"],
  "exclude": ["dist/**/*", "dist/*", "src/*.test.*s", "src/**/*.test.*s"]
}
