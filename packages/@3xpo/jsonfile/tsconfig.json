{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "es6",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*", "dist/*"],
}
