{
  "name": "@3xpo/universalify",
  "version": "2.0.1",
  "description": "Make a callback- or promise-based function support both promises and callbacks.",
  "keywords": [
    "callback",
    "native",
    "promise"
  ],
  "homepage": "https://codeberg.org/Expo/devtools/src/branch/senpai/packages/@3xpo/universalify/",
  "bugs": {
    "url": "https://codeberg.org/Expo/devtools/issues",
    "email": "expo@expo.moe"
  },
  "license": "MIT",
  "author": "Expo",
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/Expo/devtools.git",
    "directory": "packages/@3xpo/universalify/"
  },
  "main": "./dist/lib.bundle.min.cjs",
  "module": "./dist/lib.bundle.min.mjs",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/lib.bundle.min.mjs",
      "require": "./dist/lib.bundle.min.cjs",
      "node": "./dist/lib.bundle.min.mjs",
      "default": "./dist/lib.bundle.min.mjs"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "concurrently \"npm:build:*\"",
    "build:dts": "tsc --emitDeclarationOnly --declaration",
    "build:js": "es-many --args \"src/index.ts --sourcemap --packages=external\" --output dist/lib --minify true --bundle true --format cjs,esm --platform neutral",
    "test": "nyc --reporter text --reporter lcovonly tape test/*.js | colortape"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "contributors": [
    {
      "name": "Expo",
      "url": "https://codeberg.org/Expo",
      "email": "expo@expo.moe"
    }
  ],
  "maintainers": [
    {
      "name": "Expo",
      "url": "https://codeberg.org/Expo",
      "email": "expo@expo.moe"
    }
  ],
  "type": "module",
  "devDependencies": {
    "@types/tape": "^5.6.4",
    "colortape": "^0.1.2",
    "concurrently": "^8.2.2",
    "coveralls": "^3.0.1",
    "nyc": "^15.0.0",
    "tape": "^5.0.1"
  }
}
